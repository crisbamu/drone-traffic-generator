<Window x:Class="DroneSimulator.OptionsGeneration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OptionsGeneration" Height="300" Width="400">
    <Grid>
        <Label Content="Choose the forbidden areas to take into account." HorizontalAlignment="Left" Margin="66,10,0,0" VerticalAlignment="Top"/>
        <CheckBox Name="forbidden_flight" Content="Forbidden flight areas" HorizontalAlignment="Left" Margin="51,61,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked"/>
        <CheckBox Name="controlled" Content="Controlled airspace" HorizontalAlignment="Left" Margin="51,91,0,0" VerticalAlignment="Top"/>
        <CheckBox Name="airports" Content="Airports, aerodromes and heliports" HorizontalAlignment="Left" Margin="51,122,0,0" VerticalAlignment="Top"/>
        <CheckBox Name="cities" Content="Cities" HorizontalAlignment="Left" Margin="51,155,0,0" VerticalAlignment="Top"/>
        <Button Content="Apply" HorizontalAlignment="Left" Margin="274,219,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="51,219,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
