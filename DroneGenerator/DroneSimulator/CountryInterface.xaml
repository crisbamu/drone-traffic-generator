<Window x:Class="DroneSimulator.CountryInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CountryInterface" Height="250" Width="400">
    <Grid>
        <Label Content="Choose the country to place the routes." HorizontalAlignment="Left" Margin="88,23,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="country_comboBox" HorizontalAlignment="Left" Margin="136,74,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="country_comboBox_SelectionChanged">
            <ComboBoxItem Content="Spain"/>
            <ComboBoxItem Content="Martorell"/>
        </ComboBox>
        <Label Content="Country:" HorizontalAlignment="Left" Margin="62,70,0,0" VerticalAlignment="Top"/>
        <Button Content="Next" HorizontalAlignment="Left" Margin="277,147,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="42,147,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
